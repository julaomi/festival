<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound"
    tools:context="com.example.tadje.festival_app.MainActivity">

    <TextView
        android:id="@+id/textViewFestivalName"
        android:layout_width="306dp"
        android:layout_height="85dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/curved_text"
        android:fontFamily="casual"
        android:gravity="center_vertical|center"
        android:text="@string/festivalname"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        />

    <TextView
        android:id="@+id/textViewFestivalOrt"
        android:layout_width="163dp"
        android:layout_height="40dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:gravity="center_vertical|center"
        android:text="@string/festivalort"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFestivalName"
        app:layout_constraintVertical_bias="0.037"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        />

    <TextView
        android:id="@+id/textViewFestivalDatum"
        android:layout_width="255dp"
        android:layout_height="109dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:gravity="center_vertical|center"
        android:text="@string/festivaldatum"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFestivalOrt"
        app:layout_constraintVertical_bias="0.478"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="100sp"
        />

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
